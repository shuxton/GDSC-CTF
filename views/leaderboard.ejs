<script>
  $( '#table' ).searchable();

  var select = document.querySelector("#search");
  $('#table').on('click', 'tr', function() {
    select.value_=$(this).attr('value');
    select.value = $(this).find("#tn").text();
  });

  function updateAction() {
    document.form.action = "/submit/" + select.value_;
  }
</script>
